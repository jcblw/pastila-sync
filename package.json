{
  "name": "pastila-sync",
  "version": "1.0.0",
  "description": "Small menubar app that acts like dropbox sync but with gist files.",
  "main": "app.js",
  "scripts": {
    "start": "electron app.js",
    "start-test": "node -r dotenv/config dist/app",
    "build": "babel src --out-dir dist",
    "watch": "babel src --out-dir dist -w",
    "test": "standard src",
    "packager": "electron-packager . 'Pastila Sync' --overwrite --out=builds --icon=assets/icon.icns",
    "pkg": "npm run build && npm run packager",
    "dist": "npm run build &&  build"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-async-to-generator",
      "transform-react-jsx"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@jcblw/menubar": "^5.1.0",
    "async-fn-catch": "^0.1.0",
    "auto-bind": "^1.1.0",
    "dotenv": "^4.0.0",
    "electron-config": "^1.0.0",
    "electron-default-menu": "^1.0.0",
    "eventemitter2": "^4.1.0",
    "gist-sync": "^0.2.0",
    "glamor": "^2.17.12",
    "glamour": "^1.2.3",
    "mz": "^2.4.0",
    "open": "^0.0.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "redux": "^3.6.0",
    "user-home": "^2.0.0"
  },
  "devDependencies": {
    "7zip-bin-mac": "^1.0.1",
    "babel-cli": "^6.16.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.16.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "electron-builder": "^17.5.0",
    "electron-packager": "^8.2.0",
    "electron-prebuilt": "^1.4.3",
    "standard": "^10.0.2"
  },
  "build": {
    "appId": "org.jcblw.pastila-sync",
    "mac": {
      "category": "public.app-category.developer-tool"
    }
  },
  "directories": {
    "buildResources": "build-assets",
    "output": "builds"
  }
}
